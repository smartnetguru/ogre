#resume-section
  #create-resume-section
    = link_to t('create_a_resume'), :new_resume
  #your-resumes-section
    = t 'your_resumes'
    #resumes
      table
        tr
          th
            = t 'name'
          th
            = t 'description'
          th colspan=6
            = t 'export'
          th
            = t 'delete'
        - current_user.resume.each do |resume|
          tr
            td
              = link_to resume.name_text, edit_resume_path(resume)
            td
              = resume.desc_text
            td
              = link_to "/resume/#{resume.id}/pdf"
                | PDF
            td
              = link_to "/resume/#{resume.id}/doc"
                | DOC
            td
              = link_to "/resume/#{resume.id}/html"
                | HTML
            td
              = link_to "/resume/#{resume.id}/txt"
                | TXT
            td
              = link_to 'X', "/resume/#{resume.id}/delete"

